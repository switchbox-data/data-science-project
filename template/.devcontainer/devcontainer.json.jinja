{
  "name": "{{ project_name }}",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/nils-geistmann/devcontainers-features/zsh:1": {
      "plugins": "git colored-man-pages colorize history zsh-autosuggestions fast-syntax-highlighting zsh-autocomplete"
    },
    "ghcr.io/guiyomh/features/just:0.1.0": { "version": "1.42.4" }{% if python  %},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "os-provided",
      "installTools": "false"
    }{% endif %}{% if r_data_science  %},
    "ghcr.io/rocker-org/devcontainer-features/r-apt:0.5.0": {
      "installRMarkdown": "true",
      "vscodeRSupport": "full",
      "installVscDebugger": "true",
      "installRadian": "true"
    }{% endif %}{% if python_data_science  or r_data_science  %},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "1.7.33",
      "installChromium": "true"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": [
        "chromium",
        "python3-tk",
        "pandoc"
      ]
    }{% endif %}{% if aws  %},
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "2.27.4"
    }{% endif %}
  },{% if python_data_science  %}
  "containerEnv": {
    "QUARTO_PYTHON": "/workspaces/{{ project_name }}/.venv/bin/python"
  },{% endif %}{% if aws  %}
  "initializeCommand": "mkdir -p ${localEnv:HOME}/.aws",
  "mounts": [
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
  ],
  {% endif %}
  "postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh && bash ./.devcontainer/installOhmyZshPlugins.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "tombi-toml.tombi",
        "nefrob.vscode-just-syntax"{% if python  %},
        "ms-python.python",
        "charliermarsh.ruff",
        "astral-sh.ty"{% endif %}{% if r_data_science  %},
        "REditorSupport.r",
        "RDebugger.r-debugger",
        "Posit.air-vscode"{% endif %}{% if python_data_science  or r_data_science  %},
        "quarto.quarto"{% endif %}
      ]{% if python or r_data_science  %},
      "settings": {
{% if python  %}        "python.defaultInterpreterPath": "/workspaces/{{ project_name }}/.venv/bin/python",
        "python.testing.pytestArgs": ["tests"],
        "python.testing.pytestPath": "/workspaces/{{ project_name }}/.venv/bin/pytest",
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "ruff.nativeServer": "on",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        }{% if r_data_science  %},{% endif %}
{% endif %}{% if r_data_science  %}        "r.bracketedPaste": true,
        "r.plot.useHttpgd": true,
        "r.rterm.linux": "/usr/local/bin/radian",
        "r.rterm.option": ["--no-save", "--no-restore"],
        "r.workspaceViewer.showObjectSize": true,
        "[r]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "Posit.air-vscode"
        },
{% endif %}      }{% endif %}
    }
  }
}
